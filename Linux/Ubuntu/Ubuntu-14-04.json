{
  "variables": {
    "iso_url": "./ISO/ubuntu-14.04.5-server-amd64.iso",
    "iso_checksum_type": "md5",
    "iso_checksum": "DD54DC8CFC2A655053D19813C2F9AA9F",
    "disk_size": "61440",
    "template_name": "Ubuntux64-14-04-Template",
    "ssh_username": "Administrator",
    "ssh_password": "Welcome1!",
    "output_directory": "Ubuntu-14-04-Output"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": false,
      "shutdown_timeout": "2h",
      "shutdown_command": "shutdown -h now",
      "guest_os_type": "ubuntu-64",
      "disk_size": "{{user `disk_size`}}",
      "vnc_port_min": 5900,
      "vnc_port_max": 5980,
      "version": 11,
      "communicator": "ssh",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "2h",
      "http_directory": "http",
      "boot_wait": "5s",
      "output_directory":"{{user `output_directory`}}",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US.UTF-8<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US.UTF-8<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=Ubuntu14<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "vmx_data": {
        "memsize": "4096",
        "numvcpus": "2",
        "svga.autodetect": "FALSE",
        "svga.vramSize": "134217728"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'Welcome1!' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/update.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'Welcome1!' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "inline": [
        "shutdown -r now "
      ],
      "inline_shebang": "/bin/bash -e",
      "expect_disconnect": true
    },
    {
      "type": "shell",
      "execute_command": "echo 'Welcome1!' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "pause_before": "60s",
      "scripts": [
        "scripts/vmtools.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
     "type": "vsphere",
     "host": "vcenter.lstra.com",
     "username": "administrator@vsphere.local",
     "password": "$#B!@ck@BC123!@#",
     "insecure": "true",
     "cluster": "esxi-prod.lstra.com",
     "datacenter":"lstra",
     "datastore": "Templates",
     "vm_name": "{{user `template_name`}}",
     "vm_folder": "Templates", 
     "disk_mode": "thin",
     "vm_network": "HTB",
     "overwrite": "true"
   }
 ]
